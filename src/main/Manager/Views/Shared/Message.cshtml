@{
    var message = ViewBag.Messages as Model;

    if (message != null)
    {
        var messages = message.Messages.Select(item => item.Text).ToList();

        switch (message.Status)
        {
            case ResultStatus.Success:
                @Html.Success(messages, true)
                break;
            case ResultStatus.Attention:
                @Html.Attention(messages, true)
                break;
            case ResultStatus.Error:
                @Html.Error(messages, true)
                break;
            case ResultStatus.Information:
                @Html.Information(messages, true)
                break;
        }
    }
}