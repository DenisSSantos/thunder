@model User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/content/manager/login", "~/content/jquerythunder/css")
    @Scripts.Render("~/scripts/jquery")
    @Scripts.Render("~/scripts/jqueryui")
    @Scripts.Render("~/scripts/manager")
    <script type="text/javascript">
        $(function () {
            $.manager.login.index();
        });
    </script>
</head>
<body data-root="@Href("~/")">
    <div id="content">
        <h1>Acesso ao Sistema</h1>
        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("ReturnUrl", @Request.QueryString["ReturnUrl"])
            <div id="message">
            </div>
            <p>
                @Html.LabelFor(m=>m.Login)
                @Thunder.TextBoxFor(m=>m.Login, TextBoxStyle.Xsmall)
            </p>
            <p>
                @Html.LabelFor(m=>m.Password)
                @Thunder.PasswordFor(m => m.Password, TextBoxStyle.Xsmall)
            </p>
            <p>
                @Html.Button("Acessar", "Acessar")
            </p>
        }
    </div>
</body>
</html>
