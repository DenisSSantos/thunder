<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Manager.Models.Functionality, Manager" table="functionalities">
    <id name="Id">
      <generator class="identity" />
    </id>

    <many-to-one name="Parent" column="ParentId" />

    <property name="Name" length="100" not-null="true" />
    <property name="Description" length="100" />
    <property name="Path" length="100" />
    <property name="Created" not-null="true" />
    <property name="Updated" not-null="true" />

    <bag name="Childs" cascade="all" lazy="true" order-by="Name">
      <key column="ParentId" />
      <one-to-many class="Manager.Models.Functionality, Manager" />
    </bag>
  </class>
</hibernate-mapping>