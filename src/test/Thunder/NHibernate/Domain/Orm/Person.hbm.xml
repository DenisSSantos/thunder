<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Thunder.NHibernate.Domain.Person, Thunder.Test" table="thunder_person">
    <id name="Id">
      <generator class="identity" />
    </id>

    <property name="Name" not-null="true" length="50" />

    <joined-subclass table="thunder_company" name="Thunder.NHibernate.Domain.Company, Thunder.Test">
      <key column="Person" />

      <property name="Document" not-null="true" length="50" />

    </joined-subclass>

  </class>
</hibernate-mapping>